{% block body %}
	{% form_theme form 'form_table_layout_fournisseur.html.twig' %}
    
	<div class="container">

		{{ form_start(form) }}
			{{ form_widget(form) }}

			<input class="btn btn-warning btn-sm" style="width:15%;float:left;margin-right:1%;margin-top:15px;" type="submit" value="Edit" />
		{{ form_end(form) }}

		{{ form_start(delete_form) }}
			<input type="submit" class="btn btn-danger btn-sm" style="width:5%;float:left;margin-right:1%;margin-top:15px;" value="Delete">
		{{ form_end(delete_form) }}		

	</div>	
{% endblock %}

{% block javascripts %}
    {{ parent() }}
		<script>
		$(document).ready(function(){
			$('#articles_item').addClass("active");
		});	
		</script>
{% endblock %}
